<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".keranjang">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn4"
        android:fontFamily="@font/poppinssemibold"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="60dp"
        android:textAlignment="center"
        android:text="Konfirmasi Pemesanan"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        android:drawableLeft="@drawable/left"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekening"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000 000 000 000"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Silahkan tranfers ke no rekening diatas untuk menyelesaikan transaksi"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Produk"
                android:layout_marginTop="20dp"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/productName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aviate 75 WG"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/productPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Item : Rp20.000"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/quantityEditText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Item : 1"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/perhitungan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal : Rp20.000"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Metode Pembayaran"
                android:layout_marginTop="20dp"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/green"
                android:layout_marginTop="5dp"
                android:id="@+id/metode_pembayaran"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkasan Pembayaran"
                android:layout_marginTop="20dp"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/totalPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Belanja : Rp20.000"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/metode_pembayaran2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran : OVO"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_konfirm"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:textColor="#FFFFFF"
                android:text="Konfirmasi Pesanan"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>