<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ubah_profil">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_krg"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="90dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Pilih Gambar"
                android:textColor="@color/grey1"
                android:paddingLeft="34dp"
                android:paddingTop="13dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/box3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="27dp"/>

            <EditText
                android:id="@+id/ubahUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/box3"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="27dp"/>

            <EditText
                android:id="@+id/ubahNama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/box3"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="E-mail"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="27dp" />

            <EditText
                android:id="@+id/ubahEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/box3"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="No Telepon"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="27dp"/>

            <EditText
                android:id="@+id/ubahNoHp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/box3"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="27dp"/>

            <RadioGroup
                android:id="@+id/radioGroupJenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <RadioButton
                    android:id="@+id/lakilaki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki" />

                <RadioButton
                    android:id="@+id/perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="27dp"/>

            <EditText
                android:id="@+id/ubahTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/box3"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/IdData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp"
                android:background="@color/white"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="Simpan"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/poppinssemibold"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:background="@color/white" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/left_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="26dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:paddingLeft="30dp"
            android:text="Ubah Profil"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.614"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manual_bottom_navigation"
        android:layout_width="362dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <!-- Button 1 -->
        <ImageButton
            android:id="@+id/homebar6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/home" />

        <!-- Button 2 -->
        <ImageButton
            android:id="@+id/btn_mitra6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button1"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/mitra2" />

        <!-- Button 3 -->
        <ImageButton
            android:id="@+id/btn_market6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button2"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/baseline_table_chart_24" />

        <!-- Button 4 -->
        <ImageButton
            android:id="@+id/btn_keranjang6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button3"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/baseline_shopping_cart_checkout_24" />

        <!-- Button 5 -->
        <ImageButton
            android:id="@+id/btn_profil6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button4"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/profil"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>