<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil_mitra">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/btn5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
            android:layout_width="99dp"
            android:layout_height="26dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/poppinsbold"
            android:paddingLeft="30dp"
            android:text="Toko"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.614"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
            android:id="@+id/tambahProduk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/baseline_mode_edit_outline_24" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="326dp"
        android:layout_height="325dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/namaToko2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppinsbold"
                android:text="VOKASI FARM"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <!-- RecyclerView for Product A -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProductA2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="8dp"
            tools:listitem="@layout/list_market" />

        <!-- RecyclerView for Product B -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProductB2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="8dp"
            tools:listitem="@layout/list_market"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manual_bottom_navigation"
        android:layout_width="362dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <!-- Button 1 -->
        <ImageButton
            android:id="@+id/homebar4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/home" />

        <!-- Button 2 -->
        <ImageButton
            android:id="@+id/btn_mitra4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button1"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/mitra2" />

        <!-- Button 3 -->
        <ImageButton
            android:id="@+id/btn_market4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button2"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/baseline_table_chart_24" />

        <!-- Button 4 -->
        <ImageButton
            android:id="@+id/btn_keranjang4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button3"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/baseline_shopping_cart_checkout_24" />

        <!-- Button 5 -->
        <ImageButton
            android:id="@+id/btn_profil4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/button4"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/profil"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>